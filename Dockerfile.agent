FROM python:3.13-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    iputils-ping \
    traceroute \
    dnsutils \
    net-tools \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY agent_production.py .

ENV MAIN_SERVER_URL=http://localhost:8000
ENV AGENT_COUNTRY=Russia
ENV AGENT_NAME=Agent-Moscow
ENV AGENT_UIID=
ENV AGENT_API_TOKEN=
ENV POLL_INTERVAL=5
ENV MAX_CONCURRENT_TASKS=10
ENV PORT=8001

EXPOSE 8001

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/ || exit 1

CMD ["python", "-u", "-m", "uvicorn", "agent_production:app", "--host", "0.0.0.0", "--port", "8001"]

